<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        bootstrap="./Bootstrap.php"
        colors="true"
        stopOnFailure="false"
        syntaxCheck="true"
        strict="true"
        timeoutForSmallTests="300"
        timeoutForMediumTests="600"
        timeoutForLargeTests="1200"
        >
    <testsuites>
        <testsuite name="Slot Purchase Frontend APP Test">
            <directory>./</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../module</directory>
        </whitelist>
        <blacklist>
            <directory>../test</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="./coverage-report" charset="UTF-8"
             yui="true" highlight="true" lowUpperBound="50"
             highLowerBound="80"/>
    </logging>
</phpunit>